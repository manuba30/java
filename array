import java.util.InputMismatchException;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int size = 0;
        try {
            System.out.println("Digite o tamanho do array:");
            size = scanner.nextInt();
        } catch (InputMismatchException e) {
            System.out.println("Entrada inválida. Por favor, digite um valor inteiro.");
            return; // Sai do programa se a entrada for inválida
        }

        double[] array = new double[size];
        for(int i = 0; i < size ; i++) {
            try {
                System.out.println("Digite o elemento " + (i + 1) + " do array:");
                array[i] = scanner.nextDouble();
            } catch (InputMismatchException e) {
                System.out.println("Entrada inválida. Por favor, digite um valor numérico.");
                return; // Sai do programa se a entrada for inválida
            }
        }

        System.out.println("Elementos do array:");
        for(int i = 0; i < size ; i++) {
            System.out.println(array[i]);
        }

        System.out.println("Pressione 'q' para exibir a tabela:");
        String response = scanner.next();

        if (response.equals("q")) {
            // Exibir a tabela
            System.out.println("Tabela:");
            for(int i = 0; i < size ; i++) {
                System.out.print(array[i] + "\t");
            }
            System.out.println();
        } else {
            System.out.println("Resposta inválida. Continuando o programa.");
        }
    }
}
